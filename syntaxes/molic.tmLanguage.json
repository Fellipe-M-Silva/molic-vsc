{
  "scopeName": "source.molic",
  "patterns": [
    {
      "name": "keyword.control.molic",
      "match": "\\b(scene|ubiq|proc|transition|recovery|title|details)\\b"
    },
    {
      "name": "punctuation.section.embedded.molic",
      "match": "[{}]"
    },
    {
      "name": "string.quoted.double.molic",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "comment.line.double-slash.molic",
      "match": "//.*$"
    },
    {
        "name": "entity.name.tag.molic",
        "match": "\\b(title|details)(?=\\s*:)"
    }
  ]
}