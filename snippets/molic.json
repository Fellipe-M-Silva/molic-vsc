{
  "Cena MoLIC": {
    "prefix": "scene",
    "body": [
      "scene ${1:id} {",
      "\ttitle: \"${2:Título}\"",
      "\tdetails: {",
      "\t\t\"${3:signo}\"",
      "\t}",
      "}"
    ],
    "description": "Cria uma cena MoLIC"
  },
  "Transição": {
    "prefix": "trans",
    "body": "transition ${1:origem} -> ${2:destino} \"u: ${3:enunciado}\"",
    "description": "Cria uma transição de diálogo"
  },
  "Recuperação": {
    "prefix": "rec",
    "body": "recovery ${1:origem} -> ${2:destino} \"d: ${3:erro}\"",
    "description": "Cria uma transição de recuperação (tracejada)"
  }
}